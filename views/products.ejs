<h2 style="color:crimson;">PRODUCTOS CARGADOS</h2>

<% if(products.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>nombre</th> <th>precio</th> <th>descripcion</th> </tr>
            <% for (const product of products) {%>
            <tr>
                <td><%=product.name%></td>
                <td> $ <%=product.price%></td>
                <td><%=product.description%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">No hay productos cargados</h1>
<% } %>

<a href="/"> <button class="btn btn-danger"> cargar productos </button> </a>